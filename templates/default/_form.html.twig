{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="{{asset('css/style3.css') }}">
    <link rel="stylesheet" href="{{asset('css/style.css') }}">
{% endblock %}

{% block title %}
    {% if page_title_param is defined %}{{ page_title|trans(page_title_param) }}{% else %}{{ page_title|trans }}{% endif %}
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row no-gutter">
            <div class="d-none d-md-flex col-md-4 col-lg-6 bg-image4"></div>
            <div class="col-md-8 col-lg-6">
                <div class="login d-flex align-items-center py-5">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-9 col-lg-8 mx-auto">
                                <h1>
                                    {% if page_title_param is defined %}{{ page_title|trans(page_title_param) }}{% else %}{{ page_title|trans }}{% endif %}
                                </h1>

                                {{ form_start(form, { method: attr.method|default('POST'), action: attr.action }) }}
                                {% if false == form.vars.valid %}
                                    {% include 'default/_single_flash_message.html.twig' with {
                                        type: 'danger',
                                        message: 'message.form_error'|trans,
                                    }%}
                                {% endif %}
                                {{ form_widget(form) }}
                                <div>

                                    {% if back_to_list_path|default(false) %}
                                        <div class="szczegoly3">
                                            <a class="btn btn-primary " href="{{ url('trash_index')}}" title="{{ 'action.back_to_list'|trans }}">
                                                {{ 'action.back_to_list'|trans }}
                                            </a>

                                    {% endif %}

                                        <input type="submit" value="{{ submit_label|default('action.save'|trans) }}" class="btn btn-primary " />
                                        </div>
                                    </div>


                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}