{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://bootswatch.com/5/minty/bootstrap.min.css">

{% endblock %}
{% block title %}
    {{ 'title.register'|trans}}
{% endblock %}
{% block body %}
    <h1>Zarejestruj się</h1>
    {{ form_start(form, { method: 'POST', action: url('registration') }) }}
    {{ form_widget(form) }}

        <input type="submit" value="Zarejestruj się" class="btn btn-primary" style="float: right; margin-top: 2%"/>

    {{ form_end(form) }}

{% endblock %}