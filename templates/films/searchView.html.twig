{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://bootswatch.com/5/minty/bootstrap.min.css">{% endblock %}
{% block title %}
    {{ 'title.trash.list'|trans }}
{% endblock %}

{% block body %}
    {% if pagination is defined and pagination|length %}
        {% include 'nav.html.twig' %}
        <h1>{{ 'title.Search_view'|trans }}</h1>
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
        <div class="table1">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{'label.title_film'|trans}}</th>
                <th>{{'label.label_category'|trans}}</th>
            </tr>
            </thead>
            <tbody>
            {% for film in pagination %}
                <tr>
                    <td>{{ film.title }}</td>
                    <td>{{ film.category.name }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ url('film_view', {id: film.id}) }}" title="{{ 'action.view'|trans }}">
                            {{ 'action.view'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
        <a class="btn btn-primary szczegoly1" href="{{ url('films_index') }}" title="{{ 'back'|trans }}">
            {{ 'back'|trans }}
        </a>
    {% else %}

        <h1>Nie znaleziono: {{ title }}</h1>

    {% endif %}

{% endblock %}