{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
{% endblock %}

{% block title %}
    {{ 'title_films_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_films_list'|trans }}</h1>
    <a class="btn btn-primary " href="{{ url('film_new')}}" title="{{ 'action.add_film'|trans }}">
        {{ 'action.add_film'|trans }}
    </a>
    <a class="btn btn-primary " href="{{ url('category_new')}}" title="{{ 'action.add_category'|trans }}">
        {{ 'action.add_category'|trans }}
    </a>
    {% if pagination is defined and pagination|length %}
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

            <table class="table table-striped">
                <thead>
                <tr>
                    <th>{{knp_pagination_sortable(pagination, 'label.id'|trans, 'l.id')}}</th>
                    <th>{{knp_pagination_sortable(pagination, 'label.title_film'|trans, 'l.title') }}</th>
                    <th>{{ 'label_category'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for film in pagination %}
                    <tr>
                        <td>{{ film.id }}</td>
                        <td>{{ film.title }}</td>
                        <td>{{ film.category.name }}</td>
                        <td><a class="btn btn-primary" href="{{ url('film_view', {id: film.id}) }}" title="{{ 'action.view'|trans }}">
                                {{ 'action.view'|trans }}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="navigation text-center">
                {{ knp_pagination_render(pagination) }}
            </div>
    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}

{% endblock %}
